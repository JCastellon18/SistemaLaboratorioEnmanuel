@model List<SistemaLaboratorioEnmanuel.Models.Perfil>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Perfil</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody id="">

        @foreach (var item in Model)
        {
            <tr class="">
                <td class="text-center">@item.Id</td>
                <td>@item.NombrePerfil</td>
                <td class="text-center"><button class="btn btn-primary btn-sm btn-personalizados" onclick="AgregarPerfil(@item.Id,@String.Concat("'", item.NombrePerfil, "'"))"><span class="bi bi-plus-circle-fill"></span></button></td>
            </tr>
        }
    </tbody>
</table>
