@using SistemaLaboratorioEnmanuel.Models
@model LoginViewModel
<link href="~/Content/DashboardContent/css/style.css" rel="stylesheet" />
<div class="" style="background-color: #0171a5">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="container pt-hs3">
                <div class="py-4 row justify-content-center vh-100 align-items-center">
                    <div class="col-lg-5">
                        <div class="cardcolor card" style="min-height: 50vh;">
                            <div class="card-header">
                                <div class="card-title text-center h1 my-1">
                                    Iniciar sesión
                                </div>
                            </div>
                            <div class="card-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger justify-content: center pt-4" })
                                <div class="row justify-content-center pt-4">
                                    <div class="my-5">
                                        <img src="~/Content/DashboardContent/img/LogoCircle.png" width="25%" class="img-fluid rounded mx-auto d-block img-margin">
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3 mt-lg-4 input-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mt-4 mb-4 input-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center mt-3">
                                    <div class="col-6 text-center">
                                        <div>
                                            <input type="submit" class="btn-container btn btn-outline-primary btn-personalizados" value="Iniciar sesión">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
